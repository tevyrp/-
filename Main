public class Main {
    public static void main(String[] args) {
        ShapeCreator circleCreator = new CircleCreator(5);
        Shape circle = circleCreator.createShape();
        System.out.println("Circle area: " + circle.getArea());
        System.out.println("Circle perimeter: " + circle.getPerimeter());

        ShapeCreator triangleCreator = new TriangleCreator(3, 4);
        Shape triangle = triangleCreator.createShape();
        System.out.println("Triangle area: " + triangle.getArea());
        System.out.println("Triangle perimeter: " + triangle.getPerimeter());

        ShapeCreator rectangleCreator = new RectangleCreator(2, 6);
        Shape rectangle = rectangleCreator.createShape();
        System.out.println("Rectangle area: " + rectangle.getArea());
        System.out.println("Rectangle perimeter: " + rectangle.getPerimeter());
    }
}
